<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="15dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_border"

        >

        <ImageView
            android:id="@+id/iv_courseEnrolled"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/tv_courseEnrolledM"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:singleLine="false"
            android:lines="2"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/iv_courseEnrolled"
            app:layout_constraintTop_toTopOf="@id/iv_courseEnrolled" />


        <TextView
            android:id="@+id/tv_courseStartTimeM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tv_courseEnrolledM"
            app:layout_constraintTop_toBottomOf="@id/tv_courseEnrolledM" />


        <TextView
            android:id="@+id/tv_courseEndTimeM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tv_courseStartTimeM"
            app:layout_constraintTop_toBottomOf="@id/tv_courseStartTimeM" />


        <TextView
            android:id="@+id/tv_coursePriceM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tv_courseEndTimeM"
            app:layout_constraintTop_toBottomOf="@id/tv_courseEndTimeM" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>