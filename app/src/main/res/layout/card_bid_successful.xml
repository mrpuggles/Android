<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_successfulBid"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_border"

        >

        <ImageView
            android:id="@+id/iv_auction_order"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_auctionNo_title_order_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單編號: "
            android:textColor="#000000"

            app:layout_constraintStart_toEndOf="@id/iv_auction_order"
            app:layout_constraintTop_toTopOf="@id/iv_auction_order" />

        <TextView
            android:id="@+id/tv_auctionNo_order_complete"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/tv_auctionNo_title_order_complete"
            app:layout_constraintTop_toTopOf="@id/tv_auctionNo_title_order_complete" />

        <TextView
            android:id="@+id/tv_auctionTotal_title_order_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="得標金額: "
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tv_auctionNo_title_order_complete"
            app:layout_constraintTop_toBottomOf="@id/tv_auctionNo_title_order_complete" />

        <TextView
            android:id="@+id/tv_auctionTotal_order_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/tv_auctionTotal_title_order_complete"
            app:layout_constraintTop_toTopOf="@id/tv_auctionTotal_title_order_complete" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>