<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_order_canceled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_border"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_border"

        >

        <ImageView
            android:id="@+id/iv_merchandise_order_canceled"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_orderNo_title_order_canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="訂單編號: "
            android:textColor="#000000"

            app:layout_constraintStart_toEndOf="@id/iv_merchandise_order_canceled"
            app:layout_constraintTop_toTopOf="@id/iv_merchandise_order_canceled" />

        <TextView
            android:id="@+id/tv_orderNo_order_canceled"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            app:layout_constrainedWidth="true"
            android:singleLine="false"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/tv_orderNo_title_order_canceled"
            app:layout_constraintTop_toTopOf="@id/tv_orderNo_title_order_canceled" />


        <TextView
            android:id="@+id/tv_orderTime_title_order_canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="購買時間: "
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tv_orderNo_title_order_canceled"
            app:layout_constraintTop_toBottomOf="@id/tv_orderNo_title_order_canceled" />

        <TextView
            android:id="@+id/tv_orderTime_order_canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textColor="#000000"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toEndOf="@id/tv_orderTime_title_order_canceled"
            app:layout_constraintTop_toTopOf="@id/tv_orderTime_title_order_canceled" />


        <TextView
            android:id="@+id/tv_orderTotal_title_order_canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="總金額: "
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="@id/tv_orderTime_title_order_canceled"
            app:layout_constraintTop_toBottomOf="@id/tv_orderTime_title_order_canceled" />

        <TextView
            android:id="@+id/tv_orderTotal_order_canceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/tv_orderTotal_title_order_canceled"
            app:layout_constraintTop_toTopOf="@id/tv_orderTotal_title_order_canceled" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>