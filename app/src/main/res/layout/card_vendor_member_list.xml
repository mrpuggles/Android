<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vendor_memberList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"

    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape_border">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_vendor_member"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:civ_border_color="#000000"
            app:civ_border_width="0.1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_memberNoTitle_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="會員編號: "
            app:layout_constraintStart_toEndOf="@id/iv_vendor_member"
            app:layout_constraintTop_toTopOf="@id/iv_vendor_member" />

        <TextView
            android:id="@+id/tv_memberNo_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_memberNoTitle_vendor"
            app:layout_constraintTop_toTopOf="@id/tv_memberNoTitle_vendor" />

        <TextView
            android:id="@+id/tv_memberNameTitle_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="會員名稱: "
            app:layout_constraintStart_toStartOf="@id/tv_memberNoTitle_vendor"
            app:layout_constraintTop_toBottomOf="@id/tv_memberNoTitle_vendor" />

        <TextView
            android:id="@+id/tv_memberName_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_memberNameTitle_vendor"
            app:layout_constraintTop_toTopOf="@id/tv_memberNameTitle_vendor" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>