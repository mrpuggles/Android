<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:background="@drawable/shape_border"

        >

        <ImageView
            android:id="@+id/iv_course_vendor"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_courseNameTitle_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="課程名稱: "
            app:layout_constraintStart_toStartOf="@id/iv_course_vendor"
            app:layout_constraintTop_toBottomOf="@id/iv_course_vendor" />

        <TextView
            android:id="@+id/tv_courseName_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_courseNameTitle_vendor"
            app:layout_constraintTop_toTopOf="@id/tv_courseNameTitle_vendor" />

        <TextView
            android:id="@+id/tv_courseStartTimeTitle_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="課程開始時間: "
            app:layout_constraintStart_toStartOf="@id/tv_courseNameTitle_vendor"
            app:layout_constraintTop_toBottomOf="@id/tv_courseNameTitle_vendor" />

        <TextView
            android:id="@+id/tv_courseStartTime_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_courseStartTimeTitle_vendor"
            app:layout_constraintTop_toTopOf="@id/tv_courseStartTimeTitle_vendor" />


        <TextView
            android:id="@+id/tv_courseEndTimeTitle_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="課程結束時間: "
            app:layout_constraintStart_toStartOf="@id/tv_courseStartTimeTitle_vendor"
            app:layout_constraintTop_toBottomOf="@id/tv_courseStartTimeTitle_vendor" />

        <TextView
            android:id="@+id/tv_courseEndTime_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_courseEndTimeTitle_vendor"
            app:layout_constraintTop_toTopOf="@id/tv_courseEndTimeTitle_vendor" />

        <TextView
            android:id="@+id/tv_coursePriceTitle_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="報名費: "
            app:layout_constraintStart_toStartOf="@id/tv_courseEndTimeTitle_vendor"
            app:layout_constraintTop_toBottomOf="@id/tv_courseEndTimeTitle_vendor" />

        <TextView
            android:id="@+id/tv_coursePrice_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tv_coursePriceTitle_vendor"
            app:layout_constraintTop_toTopOf="@id/tv_coursePriceTitle_vendor" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>